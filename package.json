  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "generate:component": "npx generate-react-cli component",
    "lint": "eslint -c .eslintrc.json --ext .tsx,.ts src",
    "dev": "webpack serve --config ./config/webpack.dev.js",
    "test": "jest",
    "build:production": "NODE_ENV=production webpack --config ./config/webpack.prod.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/config/jest/styleMock.js"
    },
    "verbose": true,
    "setupFiles": [
      "<rootDir>/config/jest/env-setup.ts"
    ]
  },
